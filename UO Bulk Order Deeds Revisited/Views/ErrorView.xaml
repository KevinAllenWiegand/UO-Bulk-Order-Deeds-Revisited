<UserControl x:Class="UO_Bulk_Order_Deeds.Views.ErrorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UO_Bulk_Order_Deeds.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel VerticalAlignment="Center">
        <TextBlock Text="An error has occurred!" Style="{StaticResource ErrorText}"/>
        <TextBlock Text="{Binding Message}" Style="{StaticResource ErrorText}"/>
    </StackPanel>
</UserControl>
